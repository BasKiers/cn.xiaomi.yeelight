    "name": {
        "en": "Xiaomi Yeelight"
    },
    "version": "1.0.0",
    "compatibility": ">=1.0",
    "author": {
        "name": "Bas Kiers",
        "email": "bas@athom.nl"
    },
    "drivers": [
        {
            "id": "yeelight",
            "name": {
                "en": "Light",
                "nl": "Lamp"
            },
            "class": "light",
